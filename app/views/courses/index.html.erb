<h1>課程列表</h1>

<%=form_tag courses_path,method:"get"  do%>

課程名稱<%=text_field_tag :title %>
授課老師<%=text_field_tag :teacher %>
課程時間<%=text_field_tag :time %>
<%=submit_tag  "search"%>
<%end%>
<% @courses.each do|course|%>
<%= link_to course.title, course_path(course)%>
<%= link_to "編輯課程", edit_course_path(course) %>
<%= link_to "刪除課程", course_path(course),method:"delete" %>

<%end%>